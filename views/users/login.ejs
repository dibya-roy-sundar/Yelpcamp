<% layout('layouts/boilerplate') %>
<h1>Sign In</h1>
<form action="/login" method="post">
  <div class="mb-3">
    <label class="form-label" for="username">username</label>
    <input
      class="form-control"
      type="text"
      id="username"
      name="username"
      required
    />
  </div>
  <div class="mb-3">
    <label class="form-label" for="password">password</label>
    <input
      class="form-control"
      type="password"
      id="password"
      name="password"
      required
    />
  </div>
  <button class="btn btn-success">log in</button>
</form>
